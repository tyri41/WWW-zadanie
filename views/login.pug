extends base

block main
  div.jumbotron.mainBox
    h1= "Please, log in:"
    form(method='POST' action="/login")
      div.form-group
        label(for='name') Username: 
        input.form-control#login(type='text',  name='name')
      div.form-group
        label(for='name') password: 
        input.form-control#pass(type='password',  name='pass')
      button.btn.btn-primary(type='submit') Login

